<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortner</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900">

    <div class="p-4">
        <h1 class="text-4xl text-white font-bold uppercase">URL Shortner</h1>

        <form action="/url" method="post" class="mt-3">
            <input type="text" placeholder="https://example.com" name="redirectURL" required class="w-[330px] px-3 py-2 rounded-lg text-white bg-zinc-700 focus:outline-none">
            <button type="submit" class="px-5 py-2 bg-green-500 rounded-lg text-white mt-2">Generate URL</button>
        </form>

        <div>
            <h2 class="text-2xl text-white font-bold mt-10">Your Shorten URLs:</h2>

            <div class="mt-3">
                <% if (locals.urls.length > 0) { %>
                    <% urls.forEach((url, index) => { %>
                        <div class="flex w-[800px] justify-between text-white font-medium text-xl bg-neutral-800 py-2 px-7 border-b border-zinc-900">
                            <span><%= index + 1  %></span>
                            <a href="http://localhost:3000/url/<%= url.shortID %>" class="text-blue-400" target="_blank"> http://localhost:3000/url/<%= url.shortID %></a>
                            <p><%= url.shortID %></p>
                            <p><%= url.visitStatus.length %></p>
                        </div>
                    <% }) %>
                <% } %>
            </div>
        </div>
    </div>
    
</body>
</html>